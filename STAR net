         <div id="displayArea"></div>     </div>      <script>         function showContent() {             document.getElementById('content').style.display = 'block'; // عرض المحتوى             document.querySelector('#btnEnter').style.display = 'none'; // إخفاء زر "دخول"         }          function hideAllSections() {             document.getElementById('displayArea').innerHTML = ""; // مسح المحتوى         }          function showPackages() {             hideAllSections(); // إخفاء جميع الأقسام             document.getElementById('displayArea').innerHTML = "<h3>عروض الباقات</h3><p>200 R - 800M<br>500 R - 2G<br>1000 R - 4G<br>5000 R - 20G</p>";         }          function showLimitedOffers() {             hideAllSections(); // إخفاء جميع الأقسام             document.getElementById('displayArea').innerHTML = "<h3>زيادة بنسبة</h3><p>عرض العيد - 20% زيادة<br>عرض رمضان - 30% زيادة</p>";         }          function openWhatsApp() {             window.location.href = "https://wa.me/780483098";         }          function openBilling() {             window.open("http://10.0.0.1", "_blank"); // فتح رابط الاستعلام عن الرصيد في تبويب جديد         }          function measureSpeed() {             hideAllSections(); // إخفاء جميع الأقسام             const speedDisplay = document.getElementById('displayArea');             speedDisplay.innerHTML = "<h3>قياس سرعة الإنترنت...</h3>";              const imageUrl = "https://www.gstatic.com/webp/gallery/2.jpg"; // صورة لاختبار التحميل             const img = new Image();             const startTime = new Date().getTime();              img.onload = function() {                 const endTime = new Date().getTime();                 const duration = (endTime - startTime) / 1000; // الزمن الذي استغرقه التحميل بالثواني                 const fileSizeInBytes = 117000; // حجم الصورة (قيمة تقريبية بالكيلوبايت)                 const speedMbps = (fileSizeInBytes * 8 / duration) / 1000000; // حساب السرعة بالميجابت لكل ثانية                  speedDisplay.innerHTML = `                     <h3>نتيجة قياس سرعة الإنترنت</h3>                     <p>السرعة: ${speedMbps.toFixed(2)} Mbps</p>                 `;             }              img.onerror = function() {                 speedDisplay.innerHTML = "<h3>حدث خطأ أثناء قياس السرعة</h3><p>يرجى المحاولة لاحقًا.</p>";             }              img.src = imageUrl; // بدء تحميل الصورة         }          function showStores() {             hideAllSections(); // إخفاء جميع الأقسام             document.getElementById('displayArea').innerHTML = "<h3>نقاط البيع</h3><p>1. سوبر ماركت البسمة<br>2. بقالة الخير<br>3. بقالة لفته</p>";         }          // تحديث التاريخ والوقت         function updateDateTime() {             const now = new Date();             const options = { year: 'numeric', month: 'long', day: 'numeric', weekday: 'long', hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: true };             const dateTimeString = now.toLocaleString('ar-SA', options);             document.getElementById('dateTime').textContent = dateTimeString;         }          setInterval(updateDateTime, 1000); // تحديث الوقت كل ثانية     </script>      <div class="footer">         تصميم المهندس بن طاهر     </div>  </body> </html>
